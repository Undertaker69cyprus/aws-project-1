pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/Undertaker69cyprus/aws-project-1.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Dockerize') {
            steps {
                sh 'docker build -t finance-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh './deploy.sh' // Use this to deploy using Ansible or Terraform
            }
        }
    }
}
